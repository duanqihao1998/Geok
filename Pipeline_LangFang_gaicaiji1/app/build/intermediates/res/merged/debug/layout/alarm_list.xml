<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/circle_cornor_line1" >

        <ImageView
            android:id="@+id/alarm_list_image1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="3dp"
            android:src="@drawable/alarm_flag" />

        <ImageView
            android:id="@+id/alarm_arraw"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/alarm_list_image1"
            android:src="@drawable/alarm_arraw" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/alarm_arraw"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp" >

                <TextView
                    android:id="@+id/alarm_list_tittle"
                    style="@style/tittle_text"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:gravity="bottom"
                    android:text="超速" />

                <TextView
                    android:id="@+id/alarm_list_time"
                    style="@style/circle_text"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:gravity="bottom"
                    android:paddingLeft="5dp"
                    android:text="2012年11月10日  9：08" />
            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:src="@drawable/dot_line" />

            <TextView
                android:id="@+id/alarm_list_location"
                style="@style/circle_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp"
                android:text="位置:渝干线K320+55" />

            <TextView
                android:id="@+id/alarm_list_detial"
                style="@style/circle_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp"
                android:singleLine="true"
                android:text="设置最大便宜：100m 实际偏移：150m" />
        </LinearLayout>
    </RelativeLayout>

    <ImageView
        android:id="@+id/alarm_new"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/alarm_new" />

</RelativeLayout>