<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_bg" >

    <RelativeLayout
        android:id="@+id/protect_tittle"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="@drawable/title_protect" >

        <Button
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:background="@drawable/back_selector" />

        <Button
            android:id="@+id/main"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:background="@drawable/main_selector" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/protect_tittle" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/circle_cornor_line"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/protect_detial_year"
                style="@style/pipeline_text"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/circle_cornor_line_white"
                android:gravity="center_vertical"
                android:paddingLeft="5dp"
                android:text="年份：" />

            <TextView
                android:id="@+id/protect_detial_month"
                style="@style/pipeline_text"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/circle_cornor_line_white"
                android:gravity="center_vertical"
                android:paddingLeft="5dp"
                android:text="月份：" />

            <TextView
                android:id="@+id/protect_detial_line"
                style="@style/pipeline_text"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/circle_cornor_line_white"
                android:gravity="center_vertical"
                android:paddingLeft="5dp"
                android:text="线路：" />

            <TextView
                android:id="@+id/protect_detial_pile"
                style="@style/pipeline_text"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/circle_cornor_line_white"
                android:gravity="center_vertical"
                android:paddingLeft="5dp"
                android:text="桩号：" />

            <TextView
                android:id="@+id/protect_detial_value"
                style="@style/pipeline_text"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/circle_cornor_line_white"
                android:gravity="center_vertical"
                android:paddingLeft="5dp"
                android:text="电位值：" />

            <TextView
                android:id="@+id/protect_detial_testtime"
                style="@style/pipeline_text"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/circle_cornor_line_white"
                android:gravity="center_vertical"
                android:paddingLeft="5dp"
                android:text="测试时间：" />

            <TextView
                android:id="@+id/protect_detial_voltage"
                style="@style/pipeline_text"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/circle_cornor_line_white"
                android:gravity="center_vertical"
                android:paddingLeft="5dp"
                android:text="交流电干扰电压(V)：" />

            <TextView
                android:id="@+id/protect_detial_temperature"
                style="@style/pipeline_text"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/circle_cornor_line_white"
                android:gravity="center_vertical"
                android:paddingLeft="5dp"
                android:text="温度(℃)：" />

            <TextView
                android:id="@+id/protect_detial_ground"
                style="@style/pipeline_text"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/circle_cornor_line_white"
                android:gravity="center_vertical"
                android:paddingLeft="5dp"
                android:text="土壤电阻率：" />
            
             <TextView
                android:id="@+id/protect_detial_natural"
                style="@style/pipeline_text"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/circle_cornor_line_white"
                android:gravity="center_vertical"
                android:paddingLeft="5dp"
                android:text="自然电位值：" />
             
              <TextView
                android:id="@+id/protect_detial_ir"
                style="@style/pipeline_text"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/circle_cornor_line_white"
                android:gravity="center_vertical"
                android:paddingLeft="5dp"
                android:text="IR降：" />

            <TextView
                android:id="@+id/protect_detial_remarks"
                style="@style/pipeline_text"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/circle_cornor_line_white"
                android:gravity="center_vertical"
                android:paddingLeft="5dp"
                android:text="备注：" />

            <TextView
                android:id="@+id/protect_detial_isupload"
                style="@style/pipeline_text"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/circle_cornor_line_white"
                android:gravity="center_vertical"
                android:paddingLeft="5dp"
                android:text="是否上报服务器：" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="20dp" />
        </LinearLayout>
    </ScrollView>

</RelativeLayout>