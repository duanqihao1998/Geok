<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/mainview_icon_image"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/menu_mywork_selector" />

    <TextView
        android:id="@+id/mainview_icon_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/mainview_icon_image"
        android:layout_centerHorizontal="true"
        android:text="我的工作"
        android:textColor="#1b52ab" />

    <TextView
        android:id="@+id/mainview_icon_upgrate"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/mainview_icon_upgrate"
        android:gravity="center"
        android:text="1"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:visibility="visible" />

</RelativeLayout>