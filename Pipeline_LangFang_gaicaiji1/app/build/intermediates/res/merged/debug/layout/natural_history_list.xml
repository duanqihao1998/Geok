<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/select_list_selector" >

    <ImageView
        android:id="@+id/natural_history_list_image"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="5dp"
        android:scaleType="fitXY"
        android:src="@drawable/start_bg" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/natural_history_list_image" >

        <TextView
            android:id="@+id/natural_history_list_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:text="发生时间：2012年12月21日 9：50"
            android:textColor="#000000"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/natural_history_list_pile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/natural_history_list_time"
            android:text="管线位置：涩宁线干线 k320——340"
            android:textColor="#000000"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/natural_history_list_person"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/natural_history_list_pile"
            android:text="上报人：利特卫斯理"
            android:textColor="#000000"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/natural_history_list_flag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/natural_history_list_person"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="10dp"
            android:text="已上报"
            android:textColor="#000000"
            android:textSize="13sp" />
    </RelativeLayout>

</RelativeLayout>