<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_bg" >

    <RelativeLayout
        android:id="@+id/problem_tittle"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="@drawable/inspectionrecord" >

        <Button
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:background="@drawable/back_selector" />

        <Button
            android:id="@+id/main"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:background="@drawable/main_selector" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/problem_tittle" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/circle_cornor_line"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/inspectiondetial_begintime"
                style="@style/pipeline_text"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/circle_cornor_line_white"
                android:gravity="center_vertical"
                android:paddingLeft="5dp"
                android:text="开始时间：" />

            <TextView
                android:id="@+id/inspectiondetial_endtime"
                style="@style/pipeline_text"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/circle_cornor_line_white"
                android:gravity="center_vertical"
                android:paddingLeft="5dp"
                android:text="结束时间：" />

            <TextView
                android:id="@+id/inspectiondetial_type"
                style="@style/pipeline_text"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/circle_cornor_line_white"
                android:gravity="center_vertical"
                android:paddingLeft="5dp"
                android:text="巡检类型：" />

            <TextView
                android:id="@+id/inspectiondetial_tester"
                style="@style/pipeline_text"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/circle_cornor_line_white"
                android:gravity="center_vertical"
                android:paddingLeft="5dp"
                android:text="巡检人员：" />

            <TextView
                android:id="@+id/inspectiondetial_tools"
                style="@style/pipeline_text"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/circle_cornor_line_white"
                android:gravity="center_vertical"
                android:paddingLeft="5dp"
                android:text="巡检工具：" />

            <TextView
                android:id="@+id/inspectiondetial_inspfreq"
                style="@style/pipeline_text"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/circle_cornor_line_white"
                android:gravity="center_vertical"
                android:paddingLeft="5dp"
                android:text="巡检频次：" />

            <TextView
                android:id="@+id/inspectiondetial_yeild"
                style="@style/pipeline_text"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/circle_cornor_line_white"
                android:gravity="center_vertical"
                android:paddingLeft="5dp"
                android:text="巡检合格率：" />

            <TextView
                android:id="@+id/inspectiondetial_device"
                style="@style/pipeline_text"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/circle_cornor_line_white"
                android:gravity="center_vertical"
                android:paddingLeft="5dp"
                android:text="巡检合格率：" />

            <TextView
                android:id="@+id/inspectiondetial_points"
                style="@style/pipeline_text"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/circle_cornor_line_white"
                android:gravity="center_vertical"
                android:paddingLeft="5dp"
                android:text="轨迹点数：" />

            <TextView
                android:id="@+id/inspectiondetial_speed"
                style="@style/pipeline_text"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/circle_cornor_line_white"
                android:gravity="center_vertical"
                android:paddingLeft="5dp"
                android:text="平均速度：" />

            <TextView
                android:id="@+id/inspectiondetial_weather"
                style="@style/pipeline_text"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/circle_cornor_line_white"
                android:gravity="center_vertical"
                android:paddingLeft="5dp"
                android:text="天气状况：" />

            <TextView
                android:id="@+id/inspectiondetial_road"
                style="@style/pipeline_text"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/circle_cornor_line_white"
                android:gravity="center_vertical"
                android:paddingLeft="5dp"
                android:text="道路状况：" />

            <TextView
                android:id="@+id/inspectiondetial_record"
                style="@style/pipeline_text"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/circle_cornor_line_white"
                android:gravity="center_vertical"
                android:paddingLeft="5dp"
                android:text="巡检记事：" />

            <TextView
                android:id="@+id/inspectiondetial_problem"
                style="@style/pipeline_text"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/circle_cornor_line_white"
                android:gravity="center_vertical"
                android:paddingLeft="5dp"
                android:text="问题及其处理情况：" />

            <TextView
                android:id="@+id/inspectiondetial_result"
                style="@style/pipeline_text"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/circle_cornor_line_white"
                android:gravity="center_vertical"
                android:paddingLeft="5dp"
                android:text="处理结果：" />

            <TextView
                android:id="@+id/inspectiondetial_time"
                style="@style/pipeline_text"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/circle_cornor_line_white"
                android:gravity="center_vertical"
                android:paddingLeft="5dp"
                android:text="交班时间：" />

            <TextView
                android:id="@+id/inspectiondetial_location"
                style="@style/pipeline_text"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/circle_cornor_line_white"
                android:gravity="center_vertical"
                android:paddingLeft="5dp"
                android:text="交班地点：" />

            <TextView
                android:id="@+id/inspectiondetial_car"
                style="@style/pipeline_text"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/circle_cornor_line_white"
                android:gravity="center_vertical"
                android:paddingLeft="5dp"
                android:text="车辆状况：" />

            <TextView
                android:id="@+id/inspectiondetial_sender"
                style="@style/pipeline_text"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/circle_cornor_line_white"
                android:gravity="center_vertical"
                android:paddingLeft="5dp"
                android:text="交班人：" />

            <TextView
                android:id="@+id/inspectiondetial_receiver"
                style="@style/pipeline_text"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/circle_cornor_line_white"
                android:gravity="center_vertical"
                android:paddingLeft="5dp"
                android:text="接班人：" />

            <TextView
                android:id="@+id/inspectiondetial_other"
                style="@style/pipeline_text"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/circle_cornor_line_white"
                android:gravity="center_vertical"
                android:paddingLeft="5dp"
                android:text="其他纪事：" />

            <TextView
                android:id="@+id/inspectiondetial_isupload"
                style="@style/pipeline_text"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/circle_cornor_line_white"
                android:gravity="center_vertical"
                android:paddingLeft="5dp"
                android:text="传输状态：" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="20dp" />
        </LinearLayout>
    </ScrollView>

</RelativeLayout>