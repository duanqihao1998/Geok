<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_bg" >

    <RelativeLayout
        android:id="@+id/ground_tittle"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="@drawable/title_ground" >

        <Button
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:background="@drawable/back_selector" />

        <Button
            android:id="@+id/main"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:background="@drawable/main_selector" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ground_tittle" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/circle_cornor_line"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/ground_detial_year"
                style="@style/pipeline_text"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/circle_cornor_line_white"
                android:gravity="center_vertical"
                android:paddingLeft="5dp"
                android:text="年份：" />
            <TextView
                android:id="@+id/ground_detial_halfyear"
                style="@style/pipeline_text"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/circle_cornor_line_white"
                android:gravity="center_vertical"
                android:paddingLeft="5dp"
                android:text="半年：" />
            <TextView
                android:id="@+id/ground_detial_test_date"
                style="@style/pipeline_text"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/circle_cornor_line_white"
                android:gravity="center_vertical"
                android:paddingLeft="5dp"
                android:text="测试日期：" />

            <TextView
                android:id="@+id/ground_detial_set_value"
                style="@style/pipeline_text"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/circle_cornor_line_white"
                android:gravity="center_vertical"
                android:paddingLeft="5dp"
                android:text="规定值(R)：" />

            <TextView
                android:id="@+id/ground_detial_test_value"
                style="@style/pipeline_text"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/circle_cornor_line_white"
                android:gravity="center_vertical"
                android:paddingLeft="5dp"
                android:text="测试值：" />

            

            <TextView
                android:id="@+id/ground_detial_cpgroundbed"
                style="@style/pipeline_text"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/circle_cornor_line_white"
                android:gravity="center_vertical"
                android:paddingLeft="5dp"
                android:text="地床编号：" />

            

            <TextView
                android:id="@+id/ground_detial_conclusion"
                style="@style/pipeline_text"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/circle_cornor_line_white"
                android:gravity="center_vertical"
                android:paddingLeft="5dp"
                android:text="结论：" />

            <TextView
                android:id="@+id/ground_detial_isupload"
                style="@style/pipeline_text"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/circle_cornor_line_white"
                android:gravity="center_vertical"
                android:paddingLeft="5dp"
                android:text="是否上报服务器：" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="20dp" />
        </LinearLayout>
    </ScrollView>

</RelativeLayout>