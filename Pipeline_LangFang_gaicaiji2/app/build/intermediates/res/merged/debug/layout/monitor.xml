<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/map_top_bg"
    android:orientation="horizontal" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_weight="1"
        android:layout_gravity="center_vertical"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="@color/blue"
        >
      <ImageView
        android:id="@+id/monitor_map_online"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:src="@drawable/map_online_selector"
        />

        <TextView
            android:id="@+id/monitor_map_online_text"
            style="@style/tittle_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/monitor_map_online"
            android:layout_toRightOf="@+id/monitor_map_online"
            android:text="0" />

    </RelativeLayout>


    <TextView
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="#cdcdb4"
        android:gravity="center" />
	<RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_weight="1"
        android:layout_gravity="center_vertical"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="@color/blue"
        >
      <ImageView
        android:id="@+id/monitor_map_offline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"       
        android:src="@drawable/map_offline_selector"       
        />

        <TextView
            android:id="@+id/monitor_map_offline_text"
            style="@style/tittle_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/monitor_map_offline"
            android:layout_toRightOf="@+id/monitor_map_offline"
            android:layout_centerVertical="true"
            android:text="0" />
        
    </RelativeLayout>

</LinearLayout>
