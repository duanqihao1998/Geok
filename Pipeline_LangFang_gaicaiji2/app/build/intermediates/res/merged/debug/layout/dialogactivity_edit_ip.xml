<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    android:background="@drawable/circle_cornor_line_black"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:paddingTop="20dp" >

    <TextView
        android:id="@+id/dialogactivity_tittle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp" />

    <LinearLayout
        android:id="@+id/dialogactivity_edit"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/dialogactivity_tittle"
        android:layout_marginTop="10dp"
        android:background="@drawable/circle_cornor_line"
        android:orientation="horizontal" >

        <EditText
            android:id="@+id/dialogactivity_edit1"
            android:layout_width="20dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_weight="2"
            android:background="@null"
            android:gravity="center"
            android:numeric="integer"
            android:singleLine="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="bottom|center_horizontal"
            android:text="."
            android:textColor="#000000"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/dialogactivity_edit2"
            android:layout_width="20dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_weight="2"
            android:background="@null"
            android:gravity="center"
            android:numeric="integer"
            android:singleLine="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="bottom|center_horizontal"
            android:text="."
            android:textColor="#000000"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/dialogactivity_edit3"
            android:layout_width="20dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_weight="2"
            android:background="@null"
            android:gravity="center"
            android:numeric="integer"
            android:singleLine="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="bottom|center_horizontal"
            android:text="."
            android:textColor="#000000"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/dialogactivity_edit4"
            android:layout_width="20dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_weight="2"
            android:background="@null"
            android:gravity="center"
            android:numeric="integer"
            android:singleLine="true" />
    </LinearLayout>

    <TextView
        android:id="@+id/dialogactivity_promprt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dialogactivity_edit"
        android:visibility="gone" />

    <Button
        android:id="@+id/dialogactivity_button"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="确定" />

</RelativeLayout>