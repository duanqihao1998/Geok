<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:panel="http://schemas.android.com/apk/res/com.geok.langfang.pipeline"
    xmlns:btn="http://schemas.android.com/apk/res/com.geok.langfang.pipeline"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="ResAuto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/main_bg" >

        <RelativeLayout
            android:id="@+id/mywork_tittle"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:background="#0170b1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:textColor="@color/white"
                android:text="自然电位测试"
                android:textSize="18dp" />

            <Button
                android:id="@+id/back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:background="@drawable/return_button" />

            <Button
                android:id="@+id/main"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="5dp"
                android:background="@drawable/setting_button" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/shangxia"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_below="@+id/mywork_tittle">

            <!--<com.geok.langfang.tools.MyImageButton-->
                <!--android:id="@+id/bprevious_natural"-->
                <!--android:layout_width="100dp"-->
                <!--android:layout_height="40dp"-->
                <!--android:layout_marginLeft="60dp"-->
                <!--android:layout_weight="1"-->
                <!--android:background="@drawable/btn_press"-->
                <!--btn:src="@drawable/before"-->
                <!--btn:text="@string/befor" />-->

            <!--<com.geok.langfang.tools.MyImageButton-->
                <!--android:id="@+id/bnext_natural"-->
                <!--android:layout_width="100dp"-->
                <!--android:layout_height="40dp"-->
                <!--android:layout_marginRight="60dp"-->
                <!--android:layout_weight="1"-->
                <!--android:background="@drawable/btn_press"-->
                <!--btn:src="@drawable/next"-->
                <!--btn:text="@string/next" />-->
            <Button
                android:id="@+id/bprevious_natural"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:text="@string/befor"
                android:background="@drawable/btn_press"
                android:textColor="@drawable/textcolor"
                android:gravity="center"/>

            <Button
                android:id="@+id/bnext_natural"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:background="@drawable/btn_press"
                android:textColor="@drawable/textcolor"
                android:text="@string/next"
                android:gravity="center"
                android:layout_marginLeft="10dp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/mywork1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@+id/shangxia"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/title_bg">
            <TextView
                style="@style/tittle_text"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:gravity="center"
                android:paddingLeft="10dp"
                android:textColor="@color/white"
                android:text="保护电位测试" />
        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/mywork1" >

            <LinearLayout
                android:id="@+id/protect_scroll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/circle_cornor_line"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/natural_year"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/listitem_selector">

                    <include layout="@layout/asterisk" />

                    <TextView
                        style="@style/pipeline_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:paddingLeft="10dp"
                        android:text="年 份：" />

                    <TextView
                        android:id="@+id/text_natural_year"
                        style="@style/pipeline_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/listitem_select_text1"
                        android:singleLine="true"
                        android:text="选择年份" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:paddingRight="5dp"
                        android:src="@drawable/arrow" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/natural_month"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="3dp"
                    android:background="@drawable/listitem_selector">

                    <include layout="@layout/asterisk" />

                    <TextView
                        style="@style/pipeline_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:paddingLeft="10dp"
                        android:text="月 份：" />

                    <TextView
                        android:id="@+id/text_natural_month"
                        style="@style/pipeline_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/listitem_select_text1"
                        android:singleLine="true"
                        android:text="选择月份" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:paddingRight="5dp"
                        android:src="@drawable/arrow" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/natural_line"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="3dp"
                    android:background="@drawable/listitem_selector">

                    <include layout="@layout/asterisk" />

                    <TextView
                        style="@style/pipeline_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:paddingLeft="10dp"
                        android:text="线 路：" />

                    <TextView
                        android:id="@+id/text_natural_line"
                        style="@style/pipeline_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/listitem_select_text1"
                        android:singleLine="true"
                        android:text="选择线路" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:paddingRight="5dp"
                        android:src="@drawable/arrow" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/natural_pile"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="3dp"
                    android:background="@drawable/listitem_selector">

                    <include layout="@layout/asterisk" />

                    <TextView
                        style="@style/pipeline_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:paddingLeft="10dp"
                        android:text="桩 号：" />

                    <TextView
                        android:id="@+id/text_natural_pile"
                        style="@style/pipeline_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/listitem_select_text1"
                        android:singleLine="true"
                        android:text="选择桩号" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:paddingRight="5dp"
                        android:src="@drawable/arrow" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/natural_value"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="3dp"
                    android:background="@drawable/listitem_selector"
                    android:clickable="true">

                    <include layout="@layout/asterisk" />

                    <TextView
                        style="@style/pipeline_text"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_alignParentLeft="true"
                        android:gravity="center_vertical"
                        android:paddingLeft="10dp"
                        android:text="电位值（V）：" />

                    <TextView
                        android:id="@+id/text_natural_value"
                        style="@style/pipeline_text"
                        android:layout_width="120sp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:gravity="right|center_vertical"
                        android:paddingRight="10dp"
                        android:singleLine="true"
                        android:text="填写电位值" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/natural_test_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/listitem_selector"
                    android:clickable="true">

                    <include layout="@layout/asterisk" />

                    <TextView
                        style="@style/pipeline_text"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_alignParentLeft="true"
                        android:gravity="center_vertical"
                        android:paddingLeft="10dp"
                        android:text="测试时间：" />

                    <TextView
                        android:id="@+id/natural_test_time_text"
                        style="@style/pipeline_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:text="填写测试时间" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:paddingRight="10dp"
                        android:scaleType="center"
                        android:src="@drawable/calendar" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/natural_voltage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="3dp"
                    android:background="@drawable/listitem_selector"
                    android:clickable="true">

                    <include layout="@layout/asterisk" />

                    <TextView
                        style="@style/pipeline_text"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_alignParentLeft="true"
                        android:gravity="center_vertical"
                        android:paddingLeft="10dp"
                        android:text="交流电干扰电压（V）：" />

                    <TextView
                        android:id="@+id/text_natural_voltage"
                        style="@style/pipeline_text"
                        android:layout_width="120sp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:gravity="right|center_vertical"
                        android:paddingRight="10dp"
                        android:singleLine="true"
                        android:text="填写电压" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/natural_temperature"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="3dp"
                    android:background="@drawable/listitem_selector"
                    android:clickable="true">

                    <include layout="@layout/asterisk" />

                    <TextView
                        style="@style/pipeline_text"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_alignParentLeft="true"
                        android:gravity="center_vertical"
                        android:paddingLeft="10dp"
                        android:text="温度(℃)：" />

                    <TextView
                        android:id="@+id/text_natural_temperature"
                        style="@style/pipeline_text"
                        android:layout_width="120sp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:gravity="right|center_vertical"
                        android:paddingRight="10dp"
                        android:singleLine="true"
                        android:text="填写温度" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/natural_weather"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="3dp"
                    android:background="@drawable/listitem_selector"
                    android:clickable="true">

                    <include layout="@layout/asterisk" />

                    <TextView
                        style="@style/pipeline_text"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_alignParentLeft="true"
                        android:gravity="center_vertical"
                        android:paddingLeft="10dp"
                        android:text="天气：" />

                    <TextView
                        android:id="@+id/text_natural_weather"
                        style="@style/pipeline_text"
                        android:layout_width="120sp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:gravity="right|center_vertical"
                        android:paddingRight="10dp"
                        android:singleLine="true"
                        android:text="填写天气" />
                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/natural_remarks_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="6dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="6dp"
                    android:background="@drawable/listitem_selector"
                    android:clickable="true"
                    android:orientation="vertical">

                    <TextView
                        style="@style/pipeline_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:gravity="center"
                        android:paddingLeft="5dp"
                        android:paddingTop="5dp"
                        android:text="备注：" />

                    <EditText
                        android:id="@+id/text_natural_remarks"
                        style="@style/pipeline_text"
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:layout_marginBottom="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:background="@null"
                        android:gravity="top"
                        android:text="" />
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="80dp" />
            </LinearLayout>
        </ScrollView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
            android:background="@drawable/main_bg"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:orientation="horizontal" >

                <com.geok.langfang.tools.MyImageButton
                    android:visibility="gone"
                    android:id="@+id/bnew_natural"
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:background="@drawable/btn_press"
                    btn:src="@drawable/reset"
                    btn:text="@string/reset" />

                <com.geok.langfang.tools.MyImageButton
                    android:visibility="gone"
                    android:id="@+id/bsave_natural"
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:background="@drawable/btn_press"
                    btn:src="@drawable/save"
                    btn:text="@string/save" />

                <Button
                    android:id="@+id/bupload_natural"
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:background="@drawable/btn_press"
                    android:textColor="@drawable/textcolor"
                    android:src="@drawable/upcoming"
                    android:text="@string/upload"
                    android:gravity="center"/>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

    <com.geok.langfang.tools.Panel
        android:visibility="gone"
        android:id="@+id/pipeline_panel"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_gravity="left"
        panel:animationDuration="1000"
        panel:closedHandle="@drawable/left_switcher_collapsed_background"
        panel:content="@+id/panelContent"
        panel:handle="@+id/panelHandle"
        panel:linearFlying="true"
        panel:openedHandle="@drawable/left_switcher_expanded_background"
        panel:position="left" >

        <Button
            android:id="@+id/panelHandle"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center" />

        <LinearLayout
            android:id="@+id/panelContent"
            android:layout_width="90dp"
            android:layout_height="fill_parent"
            android:background="@drawable/panel_bg"
            android:orientation="vertical" >

            <ListView
                android:id="@+id/protect_panel_list"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:cacheColorHint="#00000000" >
            </ListView>
        </LinearLayout>
    </com.geok.langfang.tools.Panel>

</FrameLayout>